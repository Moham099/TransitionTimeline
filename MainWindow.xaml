            <Label Content="Individual Tasks" HorizontalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="134" Margin="649,425,0,0" VerticalAlignment="Top" Width="133">
            <Label Content="References" HorizontalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>
        <ListView HorizontalAlignment="Left" Height="252" Margin="160,155,0,0" VerticalAlignment="Top" Width="472">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
