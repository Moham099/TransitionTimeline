        <Label Content="Resources:" VerticalAlignment="Top" FontWeight="Bold" Margin="365,407,0,0" HorizontalAlignment="Left"/>
        <ListBox  Height="126" Margin="160,433,160,0" VerticalAlignment="Top" HorizontalContentAlignment="Center">

        </ListBox>
